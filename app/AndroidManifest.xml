<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.MichaelFAbbott.myfirstapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.MichaelFAbbott.myfirstapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.MichaelFAbbott.myfirstapp.Post_View" ></activity>
        <activity android:name="com.MichaelFAbbott.myfirstapp.Login_View" ></activity>
        
        <activity android:name="com.MichaelFAbbott.myfirstapp.AttemptView1" ></activity>
        <activity android:name="com.MichaelFAbbott.myfirstapp.AttemptView2" ></activity>
        
    </application>

</manifest>
